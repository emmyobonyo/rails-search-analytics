<p class="login">Log in to use this app<p>
<div class="container">
  <%= form_with(scope: :session, url: login_path) do |f| %>
    <div class="form-group row">
        <%= f.label :email, class: 'login-headings' %>
        <div class="col-10">
          <%= f.email_field :email, placeholder: "Enter your email address", class: 'login-input' %>
        </div>
    </div>
    <div class="form-group row">
    <%= f.label :password, class: 'login-headings' %>
      <div class="col-10">
        <%= f.password_field :password, placeholder: "Enter your password", class: 'login-input' %>
      </div>
    </div>
      <div>
        <%= f.submit "Login", class: "search-button" %><br />
      </div>
  <% end %>
</div>
<%= link_to "Don't have an account? Sign Up", signup_path%>